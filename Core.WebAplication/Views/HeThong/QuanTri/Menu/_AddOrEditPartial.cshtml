@using Core.Models
@using Core.Models.Entities
@using Core.Models.Output
@using Core.WebAplication.Common
@model Core.Models.Output.QtMenuModel
  
<div class="modal-dialog  modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="title">
                @{
                    ViewBag.Title = (ViewBag.Mode == Constants.Mode.Add) ?
                        "Thêm mới menu" :
                        "Cập nhật menu";
                    ViewBag.H1Title = ViewBag.Title;
                }
                @ViewBag.Title
            </div>
        </div>
        <div class="modal-body">
            <form id="frmAddOrEdit" class="form-horizontal">
                @if (Model != null)
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.ID)
                    <div class="form-group form-group-sm required">
                        <label for="M" class="col-sm-3 control-label">M</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.M, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group form-group-sm required">
                        <label for="TEN" class="col-sm-3 control-label">Tên</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.TEN, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TEN, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label for="MENUCHA" class="col-sm-3 control-label">Menu cha</label>
                        <div class="col-sm-5">
                            @Html.DropDownListFor(m => m.MENU_CHA_ID, new SelectList(Model.ListMenuParent, "ID", "TEN"), "-----------------", new { id = "ddlSearchMenu", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group form-group-sm required">
                        <label for="URL" class="col-sm-3 control-label">URL</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.URL, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.URL, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="form-group form-group-sm required">
                        <label for="SHOW" class="col-sm-3 control-label">Show</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.SHOW, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SHOW, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="form-group form-group-sm required">
                        <label for="THUTU" class="col-sm-3 control-label">Thứ tự</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.THU_TU, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.THU_TU, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="form-group form-group-sm required">
                        <label for="GHICHU" class="col-sm-3 control-label">Biểu tượng</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.BIEU_TUONG, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BIEU_TUONG, null, new { @class = "help-inline" })
                        </div>
                    </div>
                    <div id="divError" class="error"></div>
                }
                else
                {
                    <p>Không tìm thấy dữ liệu</p>
                }
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-blue btn-sm" id="btnAddOrEdit" onclick="AddOrEditItem(event)">
                @(ViewBag.Mode == Constants.Mode.Add ? "Thêm mới" : "Cập nhật")
            </button>
            <button type="button" class="btn btn-blue btn-sm" data-dismiss="modal">Đóng</button>
        </div>
    </div>

</div>


